<%- include('../partials/head') %>
<%- include('../partials/navbar') %>

<main class="p-4 sm:p-6 lg:p-8 max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900">Proveedores de Transporte</h1>
    <p class="text-sm text-gray-500 mt-1">Panel de operacion — Configura la cuenta espejo y los contactos para iniciar el monitoreo</p>
  </div>

  <!-- ================================================================ -->
  <!-- CAMPO PRINCIPAL: Link Cuenta Espejo                               -->
  <!-- ================================================================ -->
  <div class="bg-white rounded-xl shadow-sm border-2 border-blue-200 p-6 mb-6">
    <label for="link-cuenta-espejo" class="block text-lg font-bold text-gray-900 mb-2">
      <svg class="w-5 h-5 inline mr-1 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
      </svg>
      Link Cuenta Espejo
    </label>
    <p class="text-sm text-gray-500 mb-3">URL del sistema de rastreo GPS del proveedor de transporte (cuenta espejo)</p>
    <input type="url" id="link-cuenta-espejo" placeholder="https://plataforma-gps.com/cuenta-espejo/..."
           value="<%= viaje ? viaje.link_cuenta_espejo : (provider ? provider.url : '') %>"
           class="w-full px-4 py-3 text-base border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors font-mono">
  </div>

  <!-- ================================================================ -->
  <!-- CONTACTOS: Operador + 2 Coordinadores                            -->
  <!-- ================================================================ -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
    <h2 class="text-base font-semibold text-gray-800 mb-5 flex items-center gap-2">
      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
      </svg>
      Contactos del viaje
    </h2>

    <div class="space-y-6">
      <!-- Operador -->
      <div class="p-4 bg-blue-50 rounded-xl border border-blue-200">
        <h3 class="text-sm font-bold text-blue-800 mb-3 uppercase tracking-wider flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          Operador del viaje
        </h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">Nombre del operador</label>
            <input type="text" id="operador-nombre" placeholder="Nombre del chofer / operador"
                   value="<%= viaje ? viaje.nombre_operador : (contactos.find(c => c.tipo_contacto === 'operador') || {}).nombre_contacto || '' %>"
                   class="w-full px-3 py-2.5 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
          </div>
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">Telefono del operador</label>
            <input type="tel" id="operador-telefono" placeholder="+52 55 1234 5678"
                   value="<%= viaje ? viaje.telefono_operador : (contactos.find(c => c.tipo_contacto === 'operador') || {}).telefono_contacto || '' %>"
                   class="w-full px-3 py-2.5 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-mono">
          </div>
        </div>
      </div>

      <!-- Coordinador 1 -->
      <div class="p-4 bg-amber-50 rounded-xl border border-amber-200">
        <h3 class="text-sm font-bold text-amber-800 mb-3 uppercase tracking-wider flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Coordinador 1
        </h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">Nombre del coordinador</label>
            <input type="text" id="coordinador1-nombre" placeholder="Nombre del coordinador 1"
                   value="<%= (contactos.find(c => c.tipo_contacto === 'coordinador1') || {}).nombre_contacto || '' %>"
                   class="w-full px-3 py-2.5 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-amber-500 focus:border-amber-500">
          </div>
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">Telefono del coordinador</label>
            <input type="tel" id="coordinador1-telefono" placeholder="+52 55 1234 5678"
                   value="<%= (contactos.find(c => c.tipo_contacto === 'coordinador1') || {}).telefono_contacto || '' %>"
                   class="w-full px-3 py-2.5 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-amber-500 focus:border-amber-500 font-mono">
          </div>
        </div>
      </div>

      <!-- Coordinador 2 -->
      <div class="p-4 bg-amber-50 rounded-xl border border-amber-200">
        <h3 class="text-sm font-bold text-amber-800 mb-3 uppercase tracking-wider flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Coordinador 2
        </h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">Nombre del coordinador</label>
            <input type="text" id="coordinador2-nombre" placeholder="Nombre del coordinador 2"
                   value="<%= (contactos.find(c => c.tipo_contacto === 'coordinador2') || {}).nombre_contacto || '' %>"
                   class="w-full px-3 py-2.5 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-amber-500 focus:border-amber-500">
          </div>
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">Telefono del coordinador</label>
            <input type="tel" id="coordinador2-telefono" placeholder="+52 55 1234 5678"
                   value="<%= (contactos.find(c => c.tipo_contacto === 'coordinador2') || {}).telefono_contacto || '' %>"
                   class="w-full px-3 py-2.5 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-amber-500 focus:border-amber-500 font-mono">
          </div>
        </div>
      </div>
    </div>

    <!-- Boton guardar -->
    <div class="mt-6 flex justify-end">
      <button onclick="guardarConfig()"
              class="inline-flex items-center px-6 py-3 bg-blue-600 text-white text-sm font-semibold rounded-xl hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors shadow-sm">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        Guardar configuracion
      </button>
    </div>
  </div>

  <!-- ================================================================ -->
  <!-- CONTROLES: Botones ON/OFF                                         -->
  <!-- ================================================================ -->
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-6">

    <!-- Boton 1: Servidor (scheduler) -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h3 class="text-base font-semibold text-gray-800">Servidor</h3>
          <p class="text-xs text-gray-500 mt-0.5">Enciende o apaga el motor de scraping</p>
        </div>
        <div id="server-status-dot" class="w-3 h-3 rounded-full bg-gray-300"></div>
      </div>
      <button id="btn-toggle-server" onclick="toggleServer()"
              class="w-full py-3 rounded-xl text-sm font-bold transition-all duration-200 border-2 bg-gray-100 border-gray-300 text-gray-600 hover:bg-gray-200">
        <span id="server-btn-text">Cargando...</span>
      </button>
    </div>

    <!-- Boton 2: Tracking -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h3 class="text-base font-semibold text-gray-800">Tracking</h3>
          <p class="text-xs text-gray-500 mt-0.5">Inicia o detiene el monitoreo del viaje</p>
        </div>
        <div id="tracking-status-dot" class="w-3 h-3 rounded-full bg-gray-300"></div>
      </div>
      <button id="btn-toggle-tracking" onclick="toggleTracking()"
              class="w-full py-3 rounded-xl text-sm font-bold transition-all duration-200 border-2 bg-gray-100 border-gray-300 text-gray-600 hover:bg-gray-200">
        <span id="tracking-btn-text">Cargando...</span>
      </button>
    </div>
  </div>

  <!-- ================================================================ -->
  <!-- ESTADO: Info del tracking activo                                   -->
  <!-- ================================================================ -->
  <div id="tracking-info" class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hidden">
    <h3 class="text-base font-semibold text-gray-800 mb-4 flex items-center gap-2">
      <svg class="w-5 h-5 text-emerald-500 animate-pulse" fill="currentColor" viewBox="0 0 24 24">
        <circle cx="12" cy="12" r="6"/>
      </svg>
      Tracking activo
    </h3>
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
      <div>
        <p class="text-xs text-gray-500 uppercase">Coordenadas</p>
        <p id="info-coords" class="text-xl font-bold text-gray-900 tabular-nums mt-1">0</p>
      </div>
      <div>
        <p class="text-xs text-gray-500 uppercase">Ultima posicion</p>
        <p id="info-last-pos" class="text-sm font-mono text-gray-700 mt-1">-</p>
      </div>
      <div>
        <p class="text-xs text-gray-500 uppercase">Ultimo scrape</p>
        <p id="info-last-scrape" class="text-sm text-gray-700 mt-1">-</p>
      </div>
      <div>
        <p class="text-xs text-gray-500 uppercase">IA llamadas</p>
        <p id="info-ia-status" class="text-sm font-medium text-emerald-600 mt-1">Activa</p>
      </div>
    </div>

    <!-- Flujo de escalamiento -->
    <div class="mt-5 pt-5 border-t border-gray-100">
      <p class="text-xs font-semibold text-gray-600 uppercase tracking-wider mb-3">Protocolo de llamadas si detecta paro:</p>
      <div class="flex items-center gap-2 text-sm">
        <span class="inline-flex items-center px-3 py-1.5 bg-blue-100 text-blue-800 rounded-lg font-medium">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
          1. Operador
        </span>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
        <span class="inline-flex items-center px-3 py-1.5 bg-amber-100 text-amber-800 rounded-lg font-medium">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
          2. Coordinador 1
        </span>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
        <span class="inline-flex items-center px-3 py-1.5 bg-amber-100 text-amber-800 rounded-lg font-medium">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
          3. Coordinador 2
        </span>
      </div>
      <p class="text-xs text-gray-400 mt-2">Si el operador reporta un problema (descompostura, etc.), la IA le llama al coordinador con el motivo. Si el operador no responde, la IA llama al coordinador informando que no hubo respuesta.</p>
    </div>
  </div>
</main>

<%- include('../partials/foot') %>

<script>
(function() {
  var serverEnabled = false;
  var trackingActive = false;

  // ===========================================================================
  // Guardar configuracion
  // ===========================================================================

  window.guardarConfig = function() {
    var link = document.getElementById('link-cuenta-espejo').value.trim();
    if (!link) {
      showToast('Ingresa el link de la cuenta espejo', 'error');
      return;
    }

    var body = {
      linkCuentaEspejo: link,
      operadorNombre: document.getElementById('operador-nombre').value.trim(),
      operadorTelefono: document.getElementById('operador-telefono').value.trim(),
      coordinador1Nombre: document.getElementById('coordinador1-nombre').value.trim(),
      coordinador1Telefono: document.getElementById('coordinador1-telefono').value.trim(),
      coordinador2Nombre: document.getElementById('coordinador2-nombre').value.trim(),
      coordinador2Telefono: document.getElementById('coordinador2-telefono').value.trim(),
    };

    fetch('/providers/api/config', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(body),
    })
    .then(function(r) { return r.json(); })
    .then(function(data) {
      if (data.success) {
        showToast(data.message || 'Configuracion guardada', 'success');
        loadStatus();
      } else {
        showToast('Error: ' + (data.error || 'Error desconocido'), 'error');
      }
    })
    .catch(function(err) {
      showToast('Error: ' + err.message, 'error');
    });
  };

  // ===========================================================================
  // Toggle servidor
  // ===========================================================================

  window.toggleServer = function() {
    fetch('/api/scheduler/toggle', { method: 'POST' })
      .then(function(r) { return r.json(); })
      .then(function(data) {
        serverEnabled = data.enabled;
        updateServerUI();
        showToast('Servidor ' + (data.enabled ? 'encendido' : 'apagado'), data.enabled ? 'success' : 'info');
      })
      .catch(function(err) {
        showToast('Error: ' + err.message, 'error');
      });
  };

  // ===========================================================================
  // Toggle tracking
  // ===========================================================================

  window.toggleTracking = function() {
    var action = trackingActive ? 'stop' : 'start';

    var btn = document.getElementById('btn-toggle-tracking');
    btn.disabled = true;

    fetch('/providers/api/toggle-tracking', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ action: action }),
    })
    .then(function(r) { return r.json(); })
    .then(function(data) {
      btn.disabled = false;
      if (data.success) {
        trackingActive = data.tracking;
        updateTrackingUI();
        showToast(data.message, data.tracking ? 'success' : 'info');
      } else {
        showToast('Error: ' + (data.error || 'Error desconocido'), 'error');
      }
    })
    .catch(function(err) {
      btn.disabled = false;
      showToast('Error: ' + err.message, 'error');
    });
  };

  // ===========================================================================
  // Cargar estado
  // ===========================================================================

  function loadStatus() {
    // Estado del scheduler
    fetch('/api/scheduler/status')
      .then(function(r) { return r.json(); })
      .then(function(data) {
        serverEnabled = data.enabled;
        updateServerUI();
      })
      .catch(function() {});

    // Estado del tracking
    fetch('/providers/api/status')
      .then(function(r) { return r.json(); })
      .then(function(data) {
        if (data.success) {
          trackingActive = data.tracking;
          updateTrackingUI();

          // Actualizar info de tracking
          var infoPanel = document.getElementById('tracking-info');
          if (trackingActive && infoPanel) {
            infoPanel.classList.remove('hidden');
            document.getElementById('info-coords').textContent = data.coordCount || 0;

            if (data.lastCoord) {
              document.getElementById('info-last-pos').textContent =
                parseFloat(data.lastCoord.latitud).toFixed(4) + ', ' +
                parseFloat(data.lastCoord.longitud).toFixed(4);
            }

            if (data.provider && data.provider.ultimo_scrape) {
              var d = new Date(data.provider.ultimo_scrape);
              document.getElementById('info-last-scrape').textContent =
                d.toLocaleTimeString('es-MX', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
            }

            if (data.viaje) {
              document.getElementById('info-ia-status').textContent =
                data.viaje.ia_llamadas_activas ? 'Activa' : 'Inactiva';
              document.getElementById('info-ia-status').className =
                'text-sm font-medium mt-1 ' + (data.viaje.ia_llamadas_activas ? 'text-emerald-600' : 'text-gray-400');
            }
          } else if (infoPanel) {
            infoPanel.classList.add('hidden');
          }
        }
      })
      .catch(function() {});
  }

  // ===========================================================================
  // Actualizar UI de botones
  // ===========================================================================

  function updateServerUI() {
    var dot = document.getElementById('server-status-dot');
    var btn = document.getElementById('btn-toggle-server');
    var text = document.getElementById('server-btn-text');

    if (serverEnabled) {
      dot.className = 'w-3 h-3 rounded-full bg-emerald-500 animate-pulse';
      btn.className = 'w-full py-3 rounded-xl text-sm font-bold transition-all duration-200 border-2 bg-emerald-50 border-emerald-400 text-emerald-700 hover:bg-emerald-100';
      text.textContent = 'SERVIDOR ENCENDIDO — Click para apagar';
    } else {
      dot.className = 'w-3 h-3 rounded-full bg-gray-300';
      btn.className = 'w-full py-3 rounded-xl text-sm font-bold transition-all duration-200 border-2 bg-gray-100 border-gray-300 text-gray-600 hover:bg-gray-200';
      text.textContent = 'SERVIDOR APAGADO — Click para encender';
    }
  }

  function updateTrackingUI() {
    var dot = document.getElementById('tracking-status-dot');
    var btn = document.getElementById('btn-toggle-tracking');
    var text = document.getElementById('tracking-btn-text');

    if (trackingActive) {
      dot.className = 'w-3 h-3 rounded-full bg-blue-500 animate-pulse';
      btn.className = 'w-full py-3 rounded-xl text-sm font-bold transition-all duration-200 border-2 bg-blue-50 border-blue-400 text-blue-700 hover:bg-blue-100';
      text.textContent = 'TRACKING ACTIVO — Click para detener';
    } else {
      dot.className = 'w-3 h-3 rounded-full bg-gray-300';
      btn.className = 'w-full py-3 rounded-xl text-sm font-bold transition-all duration-200 border-2 bg-gray-100 border-gray-300 text-gray-600 hover:bg-gray-200';
      text.textContent = 'TRACKING DETENIDO — Click para iniciar';
    }
  }

  // ===========================================================================
  // Inicializar
  // ===========================================================================

  loadStatus();
  setInterval(loadStatus, 15000); // Refrescar cada 15s

  // ===========================================================================
  // Toast
  // ===========================================================================

  window.showToast = window.showToast || function(message, type) {
    var colors = { success: 'bg-emerald-600', error: 'bg-red-600', info: 'bg-blue-600' };
    var toast = document.createElement('div');
    toast.className = 'fixed bottom-4 right-4 z-50 px-4 py-3 rounded-lg text-white text-sm shadow-lg transition-all duration-300 max-w-sm ' + (colors[type] || colors.info);
    toast.textContent = message;
    toast.style.opacity = '0';
    toast.style.transform = 'translateY(10px)';
    document.body.appendChild(toast);
    requestAnimationFrame(function() {
      toast.style.opacity = '1';
      toast.style.transform = 'translateY(0)';
    });
    setTimeout(function() {
      toast.style.opacity = '0';
      toast.style.transform = 'translateY(10px)';
      setTimeout(function() { if (toast.parentNode) toast.parentNode.removeChild(toast); }, 300);
    }, 4000);
  };
})();
</script>
