<%- include('../partials/head') %>
<%- include('../partials/navbar') %>

<main class="p-4 sm:p-6 lg:p-8">
  <!-- Header -->
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Proveedores GPS</h1>
      <p class="text-sm text-gray-500 mt-1">Administra los proveedores de rastreo GPS</p>
    </div>
    <button id="btn-add-provider" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors shadow-sm">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
      Nuevo Proveedor
    </button>
  </div>

  <!-- Syncfusion Grid -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <div id="providers-grid"></div>
  </div>

  <!-- Dialog Crear/Editar Proveedor -->
  <div id="provider-dialog" style="display:none;">
    <%- include('form') %>
  </div>

  <!-- Dialog Confirmar Eliminacion -->
  <div id="delete-dialog" style="display:none;">
    <div class="p-2 text-center">
      <svg class="w-12 h-12 mx-auto text-red-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4.5c-.77-.833-2.694-.833-3.464 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"/>
      </svg>
      <h3 class="text-lg font-semibold text-gray-900 mb-1">Eliminar proveedor</h3>
      <p class="text-sm text-gray-500">Esta accion no se puede deshacer. Se eliminara permanentemente el proveedor <strong id="delete-provider-name"></strong>.</p>
    </div>
  </div>

  <!-- Toast container -->
  <div id="toast-container"></div>
</main>

<script src="/public/js/providers.js"></script>
<%- include('../partials/foot') %>
