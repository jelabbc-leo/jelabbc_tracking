<%- include('partials/head') %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-100 px-4">
  <div class="text-center max-w-md">
    <!-- Icono animado -->
    <div class="mb-8 relative">
      <div class="w-24 h-24 mx-auto bg-white rounded-2xl shadow-lg border border-gray-200 flex items-center justify-center">
        <% if (title && title.startsWith('404')) { %>
        <svg class="w-12 h-12 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <% } else { %>
        <svg class="w-12 h-12 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4.5c-.77-.833-2.694-.833-3.464 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"/>
        </svg>
        <% } %>
      </div>
    </div>

    <!-- Titulo -->
    <h1 class="text-3xl font-bold text-gray-800 mb-3"><%= title %></h1>

    <!-- Mensaje -->
    <p class="text-gray-500 mb-8 leading-relaxed"><%= message %></p>

    <!-- Acciones -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
      <a href="/dashboard"
         class="inline-flex items-center px-5 py-2.5 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 shadow-sm transition-colors">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zm10 0a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zm10 0a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
        </svg>
        Ir al Dashboard
      </a>
      <button onclick="history.back()"
              class="inline-flex items-center px-5 py-2.5 bg-white text-gray-700 text-sm font-medium rounded-lg border border-gray-300 hover:bg-gray-50 shadow-sm transition-colors">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Volver
      </button>
    </div>

    <!-- Logo -->
    <div class="mt-12 opacity-30">
      <img src="/public/img/logo.png" alt="JELABBC" class="h-8 mx-auto">
    </div>
  </div>
</div>

<%- include('partials/foot') %>
