<%- include('../partials/head') %>
<%- include('../partials/navbar') %>

<main class="p-4 sm:p-6 lg:p-8 max-w-[1600px] mx-auto">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 gap-3">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Viajes</h1>
      <p class="text-sm text-gray-500 mt-1">Administra y monitorea los viajes registrados</p>
    </div>
    <div class="flex items-center gap-3">
      <!-- Buscador -->
      <div class="relative">
        <svg class="w-4 h-4 absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <input type="text" id="search-viajes" placeholder="Buscar unidad, origen, destino..."
               class="pl-9 pr-4 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none w-64 transition-colors">
      </div>
      <!-- Boton actualizar -->
      <button id="btn-refresh-viajes"
              class="inline-flex items-center gap-1.5 px-3 py-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-lg shadow-sm transition-colors">
        <svg id="refresh-icon" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        Actualizar
      </button>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-4 mb-6">
    <!-- Total -->
    <div class="stat-card group bg-white rounded-xl shadow-sm border border-gray-200 p-4 hover:shadow-md transition-all cursor-pointer" data-filter="all">
      <div class="flex items-center justify-between mb-2">
        <div class="bg-blue-50 text-blue-600 p-2 rounded-lg group-hover:bg-blue-100 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
          </svg>
        </div>
      </div>
      <p id="stat-total" class="text-2xl font-bold text-gray-900 tabular-nums"><%= stats.total || 0 %></p>
      <p class="text-xs font-medium text-gray-500 mt-0.5">Total</p>
    </div>

    <!-- En Ruta -->
    <div class="stat-card group bg-white rounded-xl shadow-sm border border-gray-200 p-4 hover:shadow-md transition-all hover:border-green-200 cursor-pointer" data-filter="en_ruta">
      <div class="flex items-center justify-between mb-2">
        <div class="bg-green-50 text-green-600 p-2 rounded-lg group-hover:bg-green-100 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
        </div>
        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">
          <span class="w-1.5 h-1.5 rounded-full bg-green-500 mr-1 animate-pulse"></span>
          Ruta
        </span>
      </div>
      <p id="stat-enruta" class="text-2xl font-bold text-green-600 tabular-nums"><%= stats.en_ruta || 0 %></p>
      <p class="text-xs font-medium text-gray-500 mt-0.5">En Ruta</p>
    </div>

    <!-- En Espera -->
    <div class="stat-card group bg-white rounded-xl shadow-sm border border-gray-200 p-4 hover:shadow-md transition-all hover:border-amber-200 cursor-pointer" data-filter="en_espera">
      <div class="flex items-center justify-between mb-2">
        <div class="bg-amber-50 text-amber-600 p-2 rounded-lg group-hover:bg-amber-100 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-700">Espera</span>
      </div>
      <p id="stat-enespera" class="text-2xl font-bold text-amber-600 tabular-nums"><%= stats.en_espera || 0 %></p>
      <p class="text-xs font-medium text-gray-500 mt-0.5">En Espera</p>
    </div>

    <!-- Cargando -->
    <div class="stat-card group bg-white rounded-xl shadow-sm border border-gray-200 p-4 hover:shadow-md transition-all hover:border-indigo-200 cursor-pointer" data-filter="cargando">
      <div class="flex items-center justify-between mb-2">
        <div class="bg-indigo-50 text-indigo-600 p-2 rounded-lg group-hover:bg-indigo-100 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
          </svg>
        </div>
        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-700">Cargando</span>
      </div>
      <p id="stat-cargando" class="text-2xl font-bold text-indigo-600 tabular-nums"><%= stats.cargando || 0 %></p>
      <p class="text-xs font-medium text-gray-500 mt-0.5">Cargando</p>
    </div>

    <!-- Completados -->
    <div class="stat-card group bg-white rounded-xl shadow-sm border border-gray-200 p-4 hover:shadow-md transition-all hover:border-teal-200 cursor-pointer" data-filter="completado">
      <div class="flex items-center justify-between mb-2">
        <div class="bg-teal-50 text-teal-600 p-2 rounded-lg group-hover:bg-teal-100 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
      <p id="stat-completado" class="text-2xl font-bold text-teal-600 tabular-nums"><%= stats.completado || 0 %></p>
      <p class="text-xs font-medium text-gray-500 mt-0.5">Completados</p>
    </div>

    <!-- Cancelados -->
    <div class="stat-card group bg-white rounded-xl shadow-sm border border-gray-200 p-4 hover:shadow-md transition-all hover:border-red-200 cursor-pointer" data-filter="cancelado">
      <div class="flex items-center justify-between mb-2">
        <div class="bg-red-50 text-red-600 p-2 rounded-lg group-hover:bg-red-100 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
      <p id="stat-cancelado" class="text-2xl font-bold text-red-500 tabular-nums"><%= stats.cancelado || 0 %></p>
      <p class="text-xs font-medium text-gray-500 mt-0.5">Cancelados</p>
    </div>
  </div>

  <!-- Filter Tabs -->
  <div class="mb-4 flex items-center gap-1 bg-gray-100 rounded-lg p-1 w-fit">
    <button class="filter-tab px-3 py-1.5 rounded-md text-xs font-medium transition-colors bg-white text-gray-700 shadow-sm" data-filter="all">
      Todos
    </button>
    <button class="filter-tab px-3 py-1.5 rounded-md text-xs font-medium transition-colors text-gray-500 hover:text-gray-700" data-filter="en_ruta">
      En Ruta
    </button>
    <button class="filter-tab px-3 py-1.5 rounded-md text-xs font-medium transition-colors text-gray-500 hover:text-gray-700" data-filter="en_espera">
      En Espera
    </button>
    <button class="filter-tab px-3 py-1.5 rounded-md text-xs font-medium transition-colors text-gray-500 hover:text-gray-700" data-filter="cargando">
      Cargando
    </button>
    <button class="filter-tab px-3 py-1.5 rounded-md text-xs font-medium transition-colors text-gray-500 hover:text-gray-700" data-filter="completado">
      Completados
    </button>
    <button class="filter-tab px-3 py-1.5 rounded-md text-xs font-medium transition-colors text-gray-500 hover:text-gray-700" data-filter="cancelado">
      Cancelados
    </button>
  </div>

  <!-- Syncfusion Grid -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <div id="viajes-grid"></div>
  </div>

  <!-- Toast container -->
  <div id="toast-container"></div>
</main>

<script>
  var viajesInitialData = <%- JSON.stringify(viajes) %>;
  var viajesStatsData = <%- JSON.stringify(stats) %>;
</script>
<script src="/public/js/viajes.js"></script>
<%- include('../partials/foot') %>
