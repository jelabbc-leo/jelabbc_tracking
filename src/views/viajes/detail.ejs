<%- include('../partials/head') %>
<%- include('../partials/navbar') %>

<main class="p-4 sm:p-6 lg:p-8 max-w-[1600px] mx-auto">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 gap-3">
    <div>
      <div class="flex items-center space-x-3">
        <a href="/viajes" class="text-gray-400 hover:text-gray-600 transition-colors p-1 rounded-md hover:bg-gray-100">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
        </a>
        <h1 class="text-2xl font-bold text-gray-900">Viaje #<%= viaje.id %></h1>
        <% if (viaje.estado_actual) { %>
        <%
          var stateCfg = {
            'en_ruta':    { bg: 'bg-green-100', text: 'text-green-800', dot: 'bg-green-500', label: 'En Ruta', pulse: true },
            'en_espera':  { bg: 'bg-amber-100', text: 'text-amber-800', dot: 'bg-amber-500', label: 'En Espera', pulse: false },
            'cargando':   { bg: 'bg-indigo-100', text: 'text-indigo-800', dot: 'bg-indigo-500', label: 'Cargando', pulse: false },
            'completado': { bg: 'bg-blue-100', text: 'text-blue-800', dot: 'bg-blue-500', label: 'Completado', pulse: false },
            'cancelado':  { bg: 'bg-red-100', text: 'text-red-800', dot: 'bg-red-500', label: 'Cancelado', pulse: false }
          };
          var sc = stateCfg[viaje.estado_actual] || { bg: 'bg-gray-100', text: 'text-gray-600', dot: 'bg-gray-400', label: viaje.estado_actual, pulse: false };
        %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= sc.bg %> <%= sc.text %>">
          <span class="w-1.5 h-1.5 rounded-full <%= sc.dot %> mr-1.5 <%= sc.pulse ? 'animate-pulse' : '' %>"></span>
          <%= sc.label %>
        </span>
        <% } %>
      </div>
      <p class="text-sm text-gray-500 mt-1 ml-9">
        <% if (viaje.numero_economico) { %><strong><%= viaje.numero_economico %></strong> &mdash; <% } %>
        <%= viaje.origen || 'â€”' %> &rarr; <%= viaje.destino || 'â€”' %>
        <% if (viaje.numero_contenedor) { %> &bull; <span class="font-mono"><%= viaje.numero_contenedor %></span><% } %>
      </p>
    </div>
    <div class="flex items-center gap-2 ml-9 sm:ml-0">
      <!-- Boton refrescar -->
      <button id="btn-refresh-detail"
              class="inline-flex items-center gap-1.5 px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 rounded-lg shadow-sm transition-colors">
        <svg id="detail-refresh-icon" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        Refrescar
      </button>
      <!-- Boton volver -->
      <a href="/viajes"
         class="inline-flex items-center gap-1.5 px-3 py-2 text-sm font-medium text-gray-600 bg-white border border-gray-300 hover:bg-gray-50 rounded-lg shadow-sm transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/></svg>
        Ver todos
      </a>
    </div>
  </div>

  <!-- ================================================================== -->
  <!-- SECCION PRINCIPAL: Mapa + Panel lateral                             -->
  <!-- ================================================================== -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">

    <!-- Mapa de ruta (2/3) -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-5 py-3 border-b border-gray-200 flex items-center justify-between">
          <h2 class="text-base font-semibold text-gray-800 flex items-center gap-2">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            Ruta del Viaje
          </h2>
          <div class="flex items-center gap-2">
            <span id="coords-count" class="text-xs text-gray-400"><%= coordenadas.length %> puntos</span>
            <% if (viaje.ultima_lat && viaje.ultima_lng) { %>
            <span class="text-xs text-gray-400 tabular-nums hidden sm:inline">
              <%= parseFloat(viaje.ultima_lat).toFixed(4) %>, <%= parseFloat(viaje.ultima_lng).toFixed(4) %>
            </span>
            <% } %>
          </div>
        </div>
        <div id="detail-map" style="height: 450px; width: 100%;"></div>
        <!-- Leyenda -->
        <div class="px-5 py-2 border-t border-gray-100 flex items-center gap-4 text-xs text-gray-500">
          <div class="flex items-center gap-1.5">
            <span class="w-3 h-1 bg-blue-500 rounded inline-block"></span>
            Ruta recorrida
          </div>
          <div class="flex items-center gap-1.5">
            <span class="w-3 h-3 rounded-full bg-green-500 inline-block"></span>
            Inicio
          </div>
          <div class="flex items-center gap-1.5">
            <span class="w-3 h-3 rounded-full bg-blue-500 ring-2 ring-blue-200 inline-block"></span>
            Posicion actual
          </div>
        </div>
      </div>
    </div>

    <!-- Panel lateral (1/3) -->
    <div class="space-y-4">

      <!-- Informacion del viaje -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5">
        <h3 class="text-sm font-semibold text-gray-800 mb-4 uppercase tracking-wider flex items-center gap-2">
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Informacion
        </h3>
        <dl class="space-y-3 text-sm">
          <div class="flex justify-between items-center">
            <dt class="text-gray-500">Unidad</dt>
            <dd class="font-semibold text-gray-900"><%= viaje.numero_economico || 'â€”' %></dd>
          </div>
          <% if (viaje.placas_unidad) { %>
          <div class="flex justify-between items-center">
            <dt class="text-gray-500">Placas</dt>
            <dd class="font-mono text-gray-700"><%= viaje.placas_unidad %></dd>
          </div>
          <% } %>
          <% if (viaje.numero_contenedor) { %>
          <div class="flex justify-between items-center">
            <dt class="text-gray-500">Contenedor</dt>
            <dd class="font-mono text-gray-700"><%= viaje.numero_contenedor %></dd>
          </div>
          <% } %>
          <div class="border-t border-gray-100 pt-3">
            <div class="flex justify-between items-center">
              <dt class="text-gray-500">Origen</dt>
              <dd class="font-medium text-gray-900 text-right max-w-[60%] truncate" title="<%= viaje.origen || '' %>"><%= viaje.origen || 'â€”' %></dd>
            </div>
          </div>
          <div class="flex justify-between items-center">
            <dt class="text-gray-500">Destino</dt>
            <dd class="font-medium text-gray-900 text-right max-w-[60%] truncate" title="<%= viaje.destino || '' %>"><%= viaje.destino || 'â€”' %></dd>
          </div>
          <% if (viaje.aduana) { %>
          <div class="flex justify-between items-center">
            <dt class="text-gray-500">Aduana</dt>
            <dd class="font-medium text-gray-700"><%= viaje.aduana %></dd>
          </div>
          <% } %>
          <div class="border-t border-gray-100 pt-3">
            <div class="flex justify-between items-center">
              <dt class="text-gray-500">Fecha salida</dt>
              <dd class="text-gray-700 tabular-nums"><%= viaje.fecha_salida || 'â€”' %></dd>
            </div>
          </div>
          <% if (viaje.fecha_llegada_estimada) { %>
          <div class="flex justify-between items-center">
            <dt class="text-gray-500">Llegada estimada</dt>
            <dd class="text-gray-700 tabular-nums"><%= viaje.fecha_llegada_estimada %></dd>
          </div>
          <% } %>
          <% if (viaje.provider_nombre) { %>
          <div class="border-t border-gray-100 pt-3">
            <div class="flex justify-between items-center">
              <dt class="text-gray-500">Proveedor GPS</dt>
              <dd class="text-gray-700">
                <span class="inline-flex items-center gap-1">
                  <svg class="w-3.5 h-3.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  </svg>
                  <%= viaje.provider_nombre %>
                </span>
              </dd>
            </div>
          </div>
          <% } %>
        </dl>
      </div>

      <!-- Tracking Config -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5">
        <h3 class="text-sm font-semibold text-gray-800 mb-4 uppercase tracking-wider flex items-center gap-2">
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Configuracion
        </h3>
        <dl class="space-y-3 text-sm">
          <div class="flex justify-between items-center">
            <dt class="text-gray-500">Monitoreo</dt>
            <dd>
              <span class="inline-flex items-center px-2 py-0.5 rounded-md text-xs font-medium bg-blue-50 text-blue-700">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                c/<%= viaje.frecuencia_monitoreo_min || 10 %> min
              </span>
            </dd>
          </div>
          <div class="flex justify-between items-center">
            <dt class="text-gray-500">Umbral paro</dt>
            <dd class="font-medium text-gray-700"><%= viaje.umbral_paro_minutos || 30 %> min</dd>
          </div>
          <div class="flex justify-between items-center">
            <dt class="text-gray-500">Llamadas IA</dt>
            <dd>
              <% if (viaje.ia_llamadas_activas) { %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">
                <span class="w-1.5 h-1.5 rounded-full bg-green-500 mr-1 animate-pulse"></span>Activas
              </span>
              <% } else { %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">Inactivas</span>
              <% } %>
            </dd>
          </div>
          <% if (viaje.modulacion_activa) { %>
          <div class="flex justify-between items-center">
            <dt class="text-gray-500">Modulacion</dt>
            <dd>
              <%
                var modColors = { 'pendiente': 'bg-amber-100 text-amber-700', 'verde': 'bg-green-100 text-green-700', 'rojo': 'bg-red-100 text-red-700' };
                var modClass = modColors[viaje.modulacion_resultado] || 'bg-gray-100 text-gray-600';
              %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium <%= modClass %>">
                <%= viaje.modulacion_resultado || 'pendiente' %>
              </span>
            </dd>
          </div>
          <% } %>
          <% if (viaje.fecha_inicio_tracking) { %>
          <div class="flex justify-between items-center">
            <dt class="text-gray-500">Inicio tracking</dt>
            <dd class="text-gray-700 tabular-nums text-xs"><%= viaje.fecha_inicio_tracking %></dd>
          </div>
          <% } %>
          <% if (viaje.fecha_fin_tracking) { %>
          <div class="flex justify-between items-center">
            <dt class="text-gray-500">Fin tracking</dt>
            <dd class="text-gray-700 tabular-nums text-xs"><%= viaje.fecha_fin_tracking %></dd>
          </div>
          <% } %>
        </dl>
      </div>

      <!-- Contactos -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5">
        <h3 class="text-sm font-semibold text-gray-800 mb-4 uppercase tracking-wider flex items-center gap-2">
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Contactos
        </h3>
        <% if (contactos.length === 0) { %>
          <p class="text-sm text-gray-400 text-center py-2">Sin contactos registrados</p>
        <% } else { %>
          <div class="space-y-3">
            <% contactos.forEach(function(c) { %>
            <%
              var roleColors = {
                'operador': { bg: 'bg-blue-50', text: 'text-blue-700', label: 'Operador' },
                'cliente': { bg: 'bg-purple-50', text: 'text-purple-700', label: 'Cliente' },
                'propietario': { bg: 'bg-teal-50', text: 'text-teal-700', label: 'Propietario' },
                'coordinador1': { bg: 'bg-amber-50', text: 'text-amber-700', label: 'Coord. 1' },
                'coordinador2': { bg: 'bg-amber-50', text: 'text-amber-700', label: 'Coord. 2' },
                'coordinador3': { bg: 'bg-amber-50', text: 'text-amber-700', label: 'Coord. 3' }
              };
              var rc = roleColors[c.tipo_contacto] || { bg: 'bg-gray-50', text: 'text-gray-600', label: c.tipo_contacto };
            %>
            <div class="flex items-center justify-between p-2 rounded-lg <%= rc.bg %>">
              <div class="min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate"><%= c.nombre || 'â€”' %></p>
                <p class="text-xs <%= rc.text %> font-medium"><%= rc.label %></p>
              </div>
              <% if (c.telefono) { %>
              <a href="tel:<%= c.telefono %>" class="flex-shrink-0 ml-2 p-1.5 rounded-md text-gray-500 hover:text-blue-600 hover:bg-white transition-colors" title="Llamar">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
              </a>
              <% } %>
            </div>
            <% }); %>
          </div>
        <% } %>
      </div>

      <!-- Links de puntos logisticos -->
      <% if (viaje.link_recoleccion || viaje.link_dropoff_vacio || viaje.link_carga_vacio || viaje.link_entrega_cargado) { %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5">
        <h3 class="text-sm font-semibold text-gray-800 mb-4 uppercase tracking-wider flex items-center gap-2">
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
          </svg>
          Puntos Logisticos
        </h3>
        <div class="space-y-2">
          <% if (viaje.link_recoleccion) { %>
          <a href="<%= viaje.link_recoleccion %>" target="_blank" rel="noopener"
             class="flex items-center gap-2 p-2 rounded-lg bg-green-50 hover:bg-green-100 transition-colors text-sm text-green-700">
            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/></svg>
            Recoleccion
            <svg class="w-3 h-3 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
          </a>
          <% } %>
          <% if (viaje.link_dropoff_vacio) { %>
          <a href="<%= viaje.link_dropoff_vacio %>" target="_blank" rel="noopener"
             class="flex items-center gap-2 p-2 rounded-lg bg-amber-50 hover:bg-amber-100 transition-colors text-sm text-amber-700">
            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4"/></svg>
            Drop-off vacio
            <svg class="w-3 h-3 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
          </a>
          <% } %>
          <% if (viaje.link_carga_vacio) { %>
          <a href="<%= viaje.link_carga_vacio %>" target="_blank" rel="noopener"
             class="flex items-center gap-2 p-2 rounded-lg bg-blue-50 hover:bg-blue-100 transition-colors text-sm text-blue-700">
            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/></svg>
            Carga vacio
            <svg class="w-3 h-3 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
          </a>
          <% } %>
          <% if (viaje.link_entrega_cargado) { %>
          <a href="<%= viaje.link_entrega_cargado %>" target="_blank" rel="noopener"
             class="flex items-center gap-2 p-2 rounded-lg bg-purple-50 hover:bg-purple-100 transition-colors text-sm text-purple-700">
            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            Entrega cargado
            <svg class="w-3 h-3 ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
          </a>
          <% } %>
        </div>
      </div>
      <% } %>

      <!-- Eventos recientes (timeline) -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5">
        <h3 class="text-sm font-semibold text-gray-800 mb-4 uppercase tracking-wider flex items-center gap-2">
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Eventos Recientes
        </h3>
        <% if (eventos.length === 0) { %>
          <p class="text-sm text-gray-400 text-center py-2">Sin eventos registrados</p>
        <% } else { %>
          <div class="space-y-1 max-h-80 overflow-y-auto pr-1">
            <% eventos.slice(0, 15).forEach(function(ev, idx) { %>
            <%
              var evConfig = {
                'creacion':               { icon: 'ðŸ†•', color: 'blue' },
                'inicio_ruta':            { icon: 'ðŸš€', color: 'green' },
                'ubicacion_actualizada':  { icon: 'ðŸ“', color: 'blue' },
                'detencion_detectada':    { icon: 'âš ï¸', color: 'red' },
                'reinicio_movimiento':    { icon: 'â–¶ï¸', color: 'green' },
                'llamada_operador':       { icon: 'ðŸ“ž', color: 'purple' },
                'llamada_cliente':        { icon: 'ðŸ“ž', color: 'purple' },
                'llamada_propietario':    { icon: 'ðŸ“ž', color: 'purple' },
                'llamada_ia_operador':    { icon: 'ðŸ¤–', color: 'indigo' },
                'llamada_ia_coordinador': { icon: 'ðŸ¤–', color: 'indigo' },
